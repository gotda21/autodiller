section.tank300
    .section_in
        .tank_main 
            .tank_top 
                .tank_topleft
                    .tank_topleft_content
                        .tank_topleft_only Только в&nbsp;АВТОРУСЬ!
                        .tank_topleft_title TANK 300
                        .tank_topleft_benefit Выгода по&nbsp;Trade-In до&nbsp;450&nbsp;000&nbsp;₽
                        .tank_topleft_alarm
                            .tank_topleft_alarm_image
                                img(src="i/icons/alarm.svg", alt="")
                            .tank_topleft_alarm_text
                                p Ограниченное предложение!
                            .tank_topleft_alarm_image
                                img(src="i/icons/alarm.svg", alt="")
                    .tank_topleft_button
                        +button({name:"Узнать стоимость по акции", theme: "primary trigger-sale", popup:"Узнать стоимость по акции"})
                        +button({name:"Тест-драйв", theme: "secondary trigger-sale", popup:"Тест-драйв"})
                        +button({name:"Рассчитать кредит", theme: "secondary trigger-sale", popup:"Рассчитать кредит"})
                .tank_topright 
                    .tank_topright_image
                        img(src="i/tank300/tank300_red.png", alt="" class="tank300Img")
                    .tank_topright__change_color 
                        ul.change_color__list
                            - let colors = ['#EF2929', '#df4c30', '#c6c9ce', '#212329', '#e6e7e8']
                                -for(i = 0; i < 5; i++)

                                    li.change_color__item
                                        button(data-src=`/i/tank300/tank300_${i + 1}.png`)
                                            .color__input(style=`background: ${colors[i]};`)
            .tank_middle
                ul.middle_about__list
                    li.middle_about__item 
                        .middle_about_image 
                            img(src="i/icons/checkor.svg", alt="")
                        .middle_about_txt Автомобили в&nbsp;наличии с&nbsp;ПТС
                    li.middle_about__item 
                        .middle_about_image 
                            img(src="i/icons/servicesup.svg", alt="")
                        .middle_about_txt Сервисная поддержка до&nbsp;5&nbsp;лет&nbsp;/ 150&nbsp;000&nbsp;км
                    li.middle_about__item 
                        .middle_about_image 
                            img(src="i/icons/upgradew.svg", alt="")
                        .middle_about_txt Улучшим любое предложение
                    li.middle_about__item 
                        .middle_about_image 
                            img(src="i/icons/creditmalo.svg", alt="")
                        .middle_about_txt Кредит&nbsp;0,01%
            .tank_bottom
                ul.bottom_gallery__list
                    -for(i = 1; i < 6; i++)
                        li.bottom_gallery__item
                            a(href=`i/tank300/gallery${i}.png` data-fancybox="gallery") 
                                img(src=`i/tank300/gallery${i}.png`, alt="")